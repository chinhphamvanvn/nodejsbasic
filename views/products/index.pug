extends ../index

block content

    h1
        span.mr-3 Products
        a.btn.btn-primary(href="/product/create") New
    .d-flex.align-items-center
        form(action="/product/search", method="GET", class="d-flex")
            input(type="text", name="q", class="form-control ml-2")
            button(class="btn btn-primary ml-2") Search
    table.table
        tr
            th Name
            th Price
            th Actions
        each product in products
            tr
                td= product.name
                td= product.price
                td
                    a.btn.btn-light(href='/products/' + product.id) View